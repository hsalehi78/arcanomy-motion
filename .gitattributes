# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Force specific file types to always use LF
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.sh text eol=lf

# Denote binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mp3 binary
*.mp4 binary
*.wav binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary

