{
  "_meta": {
    "description": "TIMELINE CHART - Data over time (months, quarters, years)",
    "version": "2.0",
    "usage": "uv run chart docs/charts/bar-chart-timeline.json",
    "outputPath": "Renders to same directory as input JSON",
    "strategy": "Consistent bar color shows progression. Only highlight if there's a specific point in time to emphasize.",
    "labelFormats": {
      "months": "Jan, Feb, Mar... or J, F, M...",
      "quarters": "Q1, Q2, Q3, Q4",
      "years": "'21, '22, '23, '24 or 2021, 2022..."
    },
    "bestFor": "Growth trends, monthly metrics, historical data, progress over time",
    "IMPORTANT_FOR_AGENTS": "All _*_desc fields are inline documentation"
  },

  "chartType": "bar",
  "_chartType_desc": "Chart type: 'bar' for vertical bar chart",

  "dimensions": {
    "_desc": "1080x1080 square for TikTok",
    "width": 1080,
    "height": 1080,
    "margin": {
      "top": 200,
      "right": 60,
      "bottom": 140,
      "left": 100
    }
  },

  "background": {
    "_desc": "Dark background for clean timeline look",
    "color": "#0A0A0A"
  },

  "title": {
    "_desc": "What metric over what time period",
    "show": true,
    "text": "Monthly Active Users (K)",
    "_text_desc": "Metric + units",
    "y": 60,
    "font": {
      "family": "Montserrat",
      "size": 56,
      "weight": 700
    },
    "color": "#FFFFFF"
  },

  "subtitle": {
    "show": true,
    "text": "First Half 2024",
    "_text_desc": "Time range",
    "y": 125,
    "font": { "family": "Inter", "size": 36, "weight": 400 },
    "color": "#888888"
  },

  "xAxis": {
    "_desc": "Time labels (months/quarters/years)",
    "show": true,
    "label": {
      "font": {
        "family": "Inter",
        "size": 36,
        "weight": 500
      },
      "color": "#FFFFFF"
    }
  },

  "yAxis": {
    "show": true,
    "_show_desc": "Show scale for trend context",
    "label": {
      "font": { "family": "Inter", "size": 32, "weight": 400 },
      "color": "#666666"
    },
    "gridLines": {
      "show": true,
      "color": "#333333"
    }
  },

  "bars": {
    "_desc": "Consistent color for timeline continuity",
    "gap": 12,
    "_gap_desc": "Tighter gap for timeline flow",
    "cornerRadius": 4,
    "_cornerRadius_desc": "Smaller radius for cleaner timeline look",
    "defaultColor": "#FFD700",
    "_defaultColor_desc": "Consistent gold for all time periods"
  },

  "dataLabels": {
    "_desc": "Values above each time period",
    "show": true,
    "position": "above",
    "font": {
      "family": "Montserrat",
      "size": 36,
      "_size_desc": "Smaller for 6+ time periods",
      "weight": 700
    },
    "color": "#FFFFFF"
  },

  "animation": {
    "_desc": "Wave animation shows time progression naturally",
    "duration": 20,
    "style": "wave",
    "_style_desc": "'wave' creates flowing left-to-right progression like time",
    "velocityMode": false,
    "_velocityMode_desc": "false = consistent timing for fair time comparison",
    "staggerDelay": 8,
    "_staggerDelay_desc": "Smooth wave from left to right",
    "direction": "left-to-right",
    "_direction_desc": "left-to-right = chronological order"
  },

  "data": [
    {
      "_desc": "January - start of timeline",
      "label": "Jan",
      "value": 45
    },
    {
      "label": "Feb",
      "value": 52
    },
    {
      "label": "Mar",
      "value": 48
    },
    {
      "label": "Apr",
      "value": 61
    },
    {
      "label": "May",
      "value": 78
    },
    {
      "_desc": "June - end of timeline (optional: highlight growth with different color)",
      "label": "Jun",
      "value": 95
    }
  ]
}
