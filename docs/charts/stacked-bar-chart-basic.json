{
  "_schema_desc": "Stacked Bar Chart Template v2.0 - Multi-series bar chart",
  "_usage_desc": "Best for: Comparing composition of categories, showing parts of a whole over time",
  
  "chartType": "stackedBar",
  "_chartType_desc": "Identifies this as a stacked bar chart for the renderer",

  "mode": "stacked",
  "_mode_desc": "stacked = bars on top of each other, grouped = bars side by side",
  "_mode_options": "stacked | grouped",

  "dimensions": {
    "_desc": "Canvas dimensions optimized for TikTok 1:1 format",
    "width": 1080,
    "height": 1080,
    "margin": {
      "_desc": "Padding inside the canvas",
      "top": 220,
      "right": 60,
      "bottom": 120,
      "left": 100
    }
  },

  "background": {
    "_desc": "Background color. Use #00FF00 for green screen transparency in CapCut.",
    "color": "#0D0D0D"
  },

  "title": {
    "_desc": "Main title at the top of the chart",
    "show": true,
    "text": "Quarterly Revenue by Region",
    "y": 50,
    "font": {
      "family": "Montserrat, Inter, sans-serif",
      "size": 52,
      "weight": 700
    },
    "color": "#FFFFFF"
  },

  "subtitle": {
    "_desc": "Secondary text below the title",
    "show": true,
    "text": "2024 Fiscal Year ($ Millions)",
    "y": 110,
    "font": {
      "family": "Inter, sans-serif",
      "size": 32,
      "weight": 400
    },
    "color": "#888888"
  },

  "xAxis": {
    "_desc": "Horizontal axis (categories)",
    "show": true,
    "label": {
      "font": {
        "family": "Inter, sans-serif",
        "size": 32,
        "weight": 500
      },
      "color": "#FFFFFF"
    }
  },

  "yAxis": {
    "_desc": "Vertical axis (values)",
    "show": true,
    "label": {
      "font": {
        "family": "Inter, sans-serif",
        "size": 24,
        "weight": 400
      },
      "color": "#888888"
    },
    "gridLines": {
      "show": true,
      "color": "#333333"
    }
  },

  "bars": {
    "_desc": "Bar styling configuration",
    "gap": 40,
    "_gap_desc": "Horizontal spacing between bar groups",
    "cornerRadius": 4
  },

  "legend": {
    "_desc": "Series legend configuration",
    "show": true,
    "position": "top",
    "_position_options": "top | bottom | right",
    "font": {
      "family": "Inter, sans-serif",
      "size": 24,
      "weight": 500
    },
    "color": "#FFFFFF"
  },

  "animation": {
    "_desc": "Controls how bars animate into view",
    "duration": 30,
    "_duration_desc": "Animation duration in frames per bar group",
    "style": "staggered",
    "_style_options": "simultaneous | staggered",
    "staggerDelay": 8,
    "_staggerDelay_desc": "Frames between each bar group starting to animate"
  },

  "series": [
    {
      "_desc": "Define each data series with a name and color",
      "name": "North America",
      "color": "#4ECDC4"
    },
    {
      "name": "Europe",
      "color": "#FF6B6B"
    },
    {
      "name": "Asia Pacific",
      "color": "#FFE66D"
    }
  ],

  "data": [
    {
      "_desc": "Each data point has a label (category) and values array matching series order",
      "label": "Q1",
      "values": [45, 32, 28]
    },
    {
      "label": "Q2",
      "values": [52, 38, 35]
    },
    {
      "label": "Q3",
      "values": [48, 42, 40]
    },
    {
      "label": "Q4",
      "values": [62, 48, 52]
    }
  ]
}

