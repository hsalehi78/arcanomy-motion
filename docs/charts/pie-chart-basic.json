{
  "_meta": {
    "description": "PIE CHART - Show proportions of a whole (market share, budget allocation, demographics)",
    "version": "2.0",
    "usage": "uv run chart docs/charts/pie-chart-basic.json",
    "outputPath": "Renders to same directory as input JSON",
    "strategy": "Use for 3-6 categories max. Highlight the key slice with a distinct color.",
    "bestFor": "Market share, budget breakdown, demographic splits, composition data",
    "tips": {
      "maxSlices": "3-6 slices ideal. More than 7 becomes hard to read.",
      "donut": "Set pie.innerRadius > 0 for donut chart (cleaner, more modern)",
      "highlight": "Use distinct color (gold/red) on the most important slice"
    },
    "IMPORTANT_FOR_AGENTS": "All _*_desc fields are inline documentation"
  },

  "chartType": "pie",
  "_chartType_desc": "Chart type: 'pie' for pie/donut chart",

  "dimensions": {
    "_desc": "1080x1080 square for TikTok",
    "width": 1080,
    "height": 1080
  },

  "background": {
    "_desc": "Background color",
    "color": "#0A0A0A",
    "_color_desc": "Near-black for contrast. Use '#00FF00' for green screen"
  },

  "title": {
    "_desc": "What this pie represents",
    "show": true,
    "text": "Market Share 2024",
    "_text_desc": "Clear, concise title",
    "y": 80,
    "_y_desc": "Vertical position from top",
    "font": {
      "family": "Montserrat",
      "size": 56,
      "weight": 700
    },
    "color": "#FFFFFF"
  },

  "subtitle": {
    "show": true,
    "_show_desc": "Toggle subtitle visibility",
    "text": "Percentage of Total Revenue",
    "y": 140,
    "font": {
      "family": "Inter",
      "size": 36,
      "weight": 400
    },
    "color": "#888888"
  },

  "pie": {
    "_desc": "Pie/donut styling",
    "innerRadius": 80,
    "_innerRadius_desc": "0 = full pie, > 0 = donut hole. 80-120 looks good for donut",
    "outerRadius": 300,
    "_outerRadius_desc": "Radius of the pie. ~300 for 1080px canvas",
    "startAngle": -90,
    "_startAngle_desc": "Starting angle: -90 = top (12 o'clock position)",
    "padAngle": 2,
    "_padAngle_desc": "Gap between slices in degrees. 1-3 looks clean"
  },

  "sliceLabels": {
    "_desc": "Labels on or near slices",
    "show": true,
    "_show_desc": "Toggle slice labels visibility",
    "position": "outside",
    "_position_desc": "OPTIONS: 'inside' (on slice), 'outside' (pointing outward)",
    "showValue": false,
    "_showValue_desc": "Show the raw value",
    "showPercent": true,
    "_showPercent_desc": "Show percentage (more common for pie charts)",
    "font": {
      "family": "Montserrat",
      "size": 36,
      "weight": 700
    },
    "color": "#FFFFFF"
  },

  "legend": {
    "_desc": "Legend showing slice labels with colors",
    "show": true,
    "_show_desc": "Toggle legend visibility",
    "position": "right",
    "_position_desc": "OPTIONS: 'right' (vertical list), 'bottom' (horizontal)",
    "font": {
      "family": "Inter",
      "size": 28,
      "weight": 500
    },
    "color": "#FFFFFF"
  },

  "animation": {
    "_desc": "How slices animate in",
    "duration": 30,
    "_duration_desc": "Frames for animation (30 = 1 sec at 30fps)",
    "style": "sequential",
    "_style_desc": "OPTIONS: 'simultaneous' (all at once), 'sequential' (one by one)",
    "staggerDelay": 8,
    "_staggerDelay_desc": "Frames between each slice for sequential animation"
  },

  "colors": [
    "#FFD700",
    "#FF3B30",
    "#00FF88",
    "#007AFF",
    "#FF9500"
  ],
  "_colors_desc": "Default colors for slices (used if slice doesn't specify color)",

  "data": [
    {
      "_desc": "Largest slice - YOUR company (highlighted gold)",
      "label": "Us",
      "value": 35,
      "color": "#FFD700",
      "_color_desc": "Gold to highlight YOUR slice"
    },
    {
      "_desc": "Competitor A",
      "label": "Competitor A",
      "value": 25
    },
    {
      "_desc": "Competitor B",
      "label": "Competitor B",
      "value": 20
    },
    {
      "_desc": "Competitor C",
      "label": "Competitor C",
      "value": 12
    },
    {
      "_desc": "Aggregated others",
      "label": "Others",
      "value": 8,
      "color": "#555555",
      "_color_desc": "Muted for 'others'"
    }
  ]
}

