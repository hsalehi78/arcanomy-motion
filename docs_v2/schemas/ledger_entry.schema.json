{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcanomy.dev/schemas/ledger_entry.schema.json",
  "title": "ConceptLedgerEntry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "date",
    "blog_identifier",
    "blog_slug",
    "day_n",
    "claim_id",
    "primary_tag",
    "takeaway_sentence",
    "hook_premise",
    "assets_version",
    "clips_used"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "run_id": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "blog_identifier": { "type": "string" },
    "blog_slug": { "type": "string" },
    "day_n": { "type": "integer", "minimum": 1, "maximum": 3650 },
    "claim_id": { "type": "string" },
    "claim_text": { "type": "string" },
    "primary_tag": { "type": "string" },
    "core_stat_hash": { "type": ["string", "null"] },
    "takeaway_sentence": { "type": "string" },
    "hook_premise": { "type": "string" },
    "assets_version": { "type": "string" },
    "clips_used": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["clip_id", "path", "source_in", "source_out"],
        "properties": {
          "clip_id": { "type": "string" },
          "path": { "type": "string" },
          "source_in": { "type": "number" },
          "source_out": { "type": "number" },
          "beat_id": { "type": ["string", "null"] }
        }
      }
    },
    "music_used": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["track_id", "path"],
      "properties": {
        "track_id": { "type": "string" },
        "path": { "type": "string" }
      }
    },
    "chart_used": { "type": ["object", "null"] }
  }
}

