{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcanomy.dev/schemas/broll_index.schema.json",
  "title": "BrollIndex",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_at", "clips"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "generated_at": { "type": "string", "format": "date-time" },
    "clips": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "path", "duration_seconds", "orientation", "tags", "composition", "has_faces", "has_logos", "motion"],
        "properties": {
          "id": { "type": "string", "minLength": 3 },
          "path": { "type": "string", "description": "POSIX-style relative path under content/libraries/broll/ (e.g., clips/broll-0001.mp4)." },
          "duration_seconds": { "type": "number", "minimum": 0.1 },
          "orientation": { "type": "string", "enum": ["9:16", "16:9", "1:1"] },
          "tags": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "composition": { "type": "string", "enum": ["wide", "medium", "close", "macro", "abstract"] },
          "has_faces": { "type": "boolean" },
          "has_logos": { "type": "boolean" },
          "motion": { "type": "string", "enum": ["static", "slow", "medium", "fast"] },
          "notes": { "type": ["string", "null"] }
        }
      }
    }
  }
}

