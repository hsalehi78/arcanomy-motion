{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcanomy.dev/schemas/asset_manifest.schema.json",
  "title": "AssetManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run_id", "clips", "music", "overlays"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "run_id": { "type": "string" },
    "clips": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["beat_id", "clip_id", "path", "source_in", "source_out"],
        "properties": {
          "beat_id": { "type": "string" },
          "clip_id": { "type": "string" },
          "path": { "type": "string" },
          "kit_path": { "type": ["string", "null"], "description": "Relative path inside 07_capcut_kit/imports/ if copied (e.g., clips/clip-01.mp4)." },
          "source_in": { "type": "number", "minimum": 0 },
          "source_out": { "type": "number", "minimum": 0 },
          "score": { "type": "number" }
        }
      }
    },
    "music": {
      "type": "object",
      "additionalProperties": false,
      "required": ["track_id", "path"],
      "properties": {
        "track_id": { "type": "string" },
        "path": { "type": "string" },
        "kit_path": { "type": ["string", "null"], "description": "Relative path inside 07_capcut_kit/imports/ if copied (e.g., music/selected.mp3)." }
      }
    },
    "overlays": {
      "type": "object",
      "additionalProperties": false,
      "required": ["chart_path", "math_card_path"],
      "properties": {
        "chart_path": { "type": ["string", "null"] },
        "math_card_path": { "type": ["string", "null"] },
        "chart_kit_path": { "type": ["string", "null"], "description": "Relative path inside 07_capcut_kit/imports/overlays/ if copied." },
        "math_card_kit_path": { "type": ["string", "null"], "description": "Relative path inside 07_capcut_kit/imports/overlays/ if copied." }
      }
    }
  }
}

