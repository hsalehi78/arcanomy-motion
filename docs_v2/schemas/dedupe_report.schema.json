{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arcanomy.dev/schemas/dedupe_report.schema.json",
  "title": "DedupeReport",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run_id", "rules", "results"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "run_id": { "type": "string" },
    "rules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tag_lookback", "stat_lookback", "similarity_threshold"],
      "properties": {
        "tag_lookback": { "type": "integer", "minimum": 1, "maximum": 60 },
        "stat_lookback": { "type": "integer", "minimum": 1, "maximum": 365 },
        "similarity_threshold": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["candidate_id", "pass", "reasons"],
        "properties": {
          "candidate_id": { "type": "string" },
          "pass": { "type": "boolean" },
          "reasons": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}

